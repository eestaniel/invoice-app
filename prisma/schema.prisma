generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [uuid_ossp(map: "uuid-ossp")]
}

model billfrom {
  id        String     @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  address   String?
  city      String?
  post_code String?
  country   String?
  invoices  invoices[]
}

model billto {
  id           String     @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  client_name  String?
  client_email String?
  address      String?
  city         String?
  post_code    String?
  country      String?
  invoices     invoices[]
}

model invoices {
  id                  String     @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  bill_from_id        String?    @db.Uuid
  bill_to_id          String?    @db.Uuid
  invoice_date        DateTime?  @db.Date
  payment_terms       String?
  project_description String?
  billfrom            billfrom?  @relation(fields: [bill_from_id], references: [id], onUpdate: NoAction)
  billto              billto?    @relation(fields: [bill_to_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  itemlist            itemlist[]
}

model itemlist {
  id         String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  invoice_id String?   @db.Uuid
  item_name  String?
  quantity   Int?
  price      Decimal?  @db.Decimal
  invoices   invoices? @relation(fields: [invoice_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}
